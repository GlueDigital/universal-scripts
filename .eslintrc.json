{
  "parser"  : "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "multiline-ternary": "off"
  },
  "globals" : {
    "__BUILD__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__SERVER__": false,
    "__CLIENT__": false,
    "__WATCH__": false,
    "__SSR__": false
  }
}
