{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    // "standard-with-typescript"
  ],
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "multiline-ternary": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "globals" : {
    "__BUILD__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__SERVER__": false,
    "__CLIENT__": false,
    "__WATCH__": false,
    "__SSR__": false
  }
}
